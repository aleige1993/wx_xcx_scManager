<!--pages/driveCar/driveDetails.wxml-->
<view class='userInfo'>
  <!-- <view class='infotext'>学员信息</view> -->
  <van-cell-group>
    <van-cell
      title="姓名"
      value="{{detail.userName}}"
    />
     <van-cell
      title="性别"
      value="{{detail.gender === '1' ? '男': '女'}}"
    />
     <van-cell
      title="身份证"
      value="{{detail.card}}"
    />
     <van-cell
      title="手机号"
      value="{{detail.mobile}}"
    />
     <van-cell
      title="车型学习"
      value="{{detail.typeText}}"
    />
     <van-cell
      title="申报站点"
      value="{{detail.stationName}}"
    />
     <van-cell
      title="所在区域"
      value="{{detail.areaName}}"
    />
     <van-cell
      title="报名时间"
      value="{{detail.gmtCreate}}"
    />
  </van-cell-group>

</view>